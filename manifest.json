{
    "manifest_version": 3,
    "name": "Calm Tabs",
    "description": "Controls music playback when watching other videos on YouTube.",
    "version": "0.0.5",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo_display.png"
    },
    "icons": {
        "128": "logo_display.png"
    }
}
